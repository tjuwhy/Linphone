<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:foreground="@drawable/selector_foreground_settings"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#FFFFFF"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:id="@+id/line_contact"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#D7DBDBDB"
    />

    <TextView
            android:id="@+id/first_letter_en"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="A"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:textColor="#21bdec"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <com.wyty.callme.commons.view.CircleImageView
            android:id="@+id/item_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:src="@drawable/orange_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

    <TextView
            android:id="@+id/first_letter_avatar"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@id/item_avatar"
            app:layout_constraintTop_toTopOf="@id/item_avatar"
            app:layout_constraintBottom_toBottomOf="@id/item_avatar"
            app:layout_constraintEnd_toEndOf="@id/item_avatar"
            android:text="大"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="大舅妈"
            android:textColor="#ee444444"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/item_avatar"
    />


</android.support.constraint.ConstraintLayout>
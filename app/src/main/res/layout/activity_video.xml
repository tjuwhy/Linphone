<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OnPhoneActivity"
        android:background="#000000">
    <TextView
            android:id="@+id/tonghuazhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="100dp"
            android:text="视频通话页面"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/lianxiren"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tonghuazhuangtai"
            android:text="杨子行"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/tonghuashezhi"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/lianxiren"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/jietong"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/jietong"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView

                android:textColor="#ffffff"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mianti_text"
                android:text="接通"
                app:layout_constraintTop_toBottomOf="@+id/jietong"
                app:layout_constraintStart_toStartOf="@+id/jietong"
                app:layout_constraintEnd_toEndOf="@+id/jietong"

        />








    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:id="@+id/endphone"
            android:layout_width="37dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/dianhua"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tonghuashezhi"

    />

    <TextView
            android:id="@+id/endphone_text"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/endphone"
            app:layout_constraintEnd_toEndOf="@+id/endphone"

            app:layout_constraintTop_toBottomOf="@+id/endphone"
            android:text="挂断" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OnPhoneActivity"
        android:background="#000000">
    <TextView
            android:textColor="#ffffff"
            android:id="@+id/tonghuazhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="正在呼叫" />
    <TextView
            android:id="@+id/lianxiren"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tonghuazhuangtai"
            android:text="杨子行"/>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/tonghuashezhi"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/lianxiren"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/mianti_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/mianti"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/shiping_image"
        />
        <TextView

                android:textColor="#ffffff"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mianti_text"
                android:text="免提"
                app:layout_constraintTop_toBottomOf="@+id/mianti_image"
                app:layout_constraintStart_toStartOf="@+id/mianti_image"
                app:layout_constraintEnd_toEndOf="@+id/mianti_image"

        />
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/shiping_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/video"
                app:layout_constraintStart_toEndOf="@id/mianti_image"
                app:layout_constraintEnd_toStartOf="@id/jingying_image"
        />
        <TextView
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="视频"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shiping_text"
                app:layout_constraintTop_toBottomOf="@+id/shiping_image"
                app:layout_constraintStart_toStartOf="@+id/shiping_image"
                app:layout_constraintEnd_toEndOf="@+id/shiping_image"

        />

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/jingying_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/maikefeng"
                app:layout_constraintStart_toEndOf="@id/shiping_image"
                app:layout_constraintEnd_toStartOf="@id/luying_image"
        />
        <TextView
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="静音"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jingying_text"
                app:layout_constraintTop_toBottomOf="@+id/jingying_image"
                app:layout_constraintStart_toStartOf="@+id/jingying_image"
                app:layout_constraintEnd_toEndOf="@+id/jingying_image"

        />
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/luying_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/luying"
                app:layout_constraintStart_toEndOf="@id/jingying_image"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="录音"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/luying_text"
                app:layout_constraintTop_toBottomOf="@+id/luying_image"
                app:layout_constraintStart_toStartOf="@+id/luying_image"
                app:layout_constraintEnd_toEndOf="@+id/luying_image"

        />





    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:src="@drawable/dianhua"
            android:id="@+id/endphone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tonghuashezhi"

    />

    <TextView
            android:id="@+id/endphone_text"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/endphone"
            app:layout_constraintEnd_toEndOf="@+id/endphone"

            app:layout_constraintTop_toBottomOf="@+id/endphone"
            android:text="挂断" />

</android.support.constraint.ConstraintLayout>